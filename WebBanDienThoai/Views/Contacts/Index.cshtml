    <div class="agile_inner_breadcrumb">
        <div class="container">
            <ul class="w3_short">
                <li>
                    @Html.ActionLink("Trang chủ", "Index", "Home")
                    <i>|</i>
                </li>
                <li>Liên hệ</li>
            </ul>
        </div>
