    <style>
        /* Hiển thị thanh ngang màu xanh khi hover cho các thẻ li cấp 1 */
        .menu__list > li:hover:after {
            content: '';
            display: block;
            width: 100%;
            height: 3px; /* Độ dày của thanh ngang */
            background-color: #007bff; /* Màu xanh */
            position: absolute;
            bottom: 0;
            left: 0;
            transition: width 0.3s;
        }

        /* Hiệu ứng làm mất thanh ngang khi không hover */
        .menu__list > li:after {
            content: '';
            display: block;
            width: 0;
            height: 3px;
            background-color: #007bff;
            position: absolute;
            bottom: 0;
            left: 0;
            transition: width 0.3s;
        }

        /* Hiệu ứng thu nhỏ thanh ngang khi không hover */
        .menu__list > li:not(:hover):after {
            width: 0;
        }

        .header-most-top {
            position: fixed;
            top: 0;
            width: 100%;
            background-color: #fff; /* Màu nền của phần ưu đãi và giảm giá */
            z-index: 1000; /* Số thứ tự z để đảm bảo nó hiển thị trên các phần khác (nếu có) */
        }

